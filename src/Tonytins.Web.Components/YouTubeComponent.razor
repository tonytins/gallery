<iframe width=@Width height=@Height src=@Video frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
<br /><sup>This video is embedded using <a href="https://support.google.com/youtube/answer/171780">Pri­va­cy-Enhanced Mode</a>.</sup>

@code { string _video = string.Empty;

    [Parameter]
    public string Video
    {
        get
        {
            return _video;
        }
        set
        {
            _video = $@"https://www.youtube-nocookie.com/embed/{value}";
        }
    }

    [Parameter]
    public string Width { get; set; } = "560";

    [Parameter]
    public string Height { get; set; } = "315"; }
