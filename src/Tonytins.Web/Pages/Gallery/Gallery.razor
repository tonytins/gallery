@page "/gallery/{Name}"
@using Tonytins.Models
@using Tonytins.Web.Components
@using System.Collections.Generic
@inject HttpClient Http
@inject Blazored.LocalStorage.ISyncLocalStorageService localStorage
<AlertComponent Display=@DisplayAlert Alert=@AlertType.Warning Message=@AlertMessage />
<div class="text-right">
    <span class="badge @DarkModeBadgeCss"><span class="fa fa-photo-video"></span> @CountArt</span>
</div>
@if (!string.IsNullOrEmpty(PageName))
{
<h2>@PageName</h2>}
@if (!string.IsNullOrEmpty(PageDescription.Value))
{@PageDescription
                <hr />
}
<div style="margin: 0 auto; margin-top: 10px;">
    @if (!IsReady)
    {
<LoadingComponent /> }
else
{
<div class="card-columns">
    @foreach (var art in art)
    {
        var permalink = $"{Name}/{art.Key}";
<GalleryComponent Title=@art.Title
                  Image=@SiteHelper.ImageCDN(art.Image, $@"gallery/{Name}")
                  Permalink=@permalink
                  Copyrights=@art.Copyrights
                  Credits=@art.Credits />}
</div>}
</div>
@code { IEnumerable<GalleryModel> art;

    [Parameter] public string Name { get; set; }

    MarkupString PageDescription { get; set; }
    string PageName { get; set; }
    string AlertMessage { get; set; }
    bool DisplayAlert { get; set; }
    int CountArt { get; set; }
    bool IsReady { get; set; }

    bool IsDarkMode => localStorage.GetItem<bool>("darkmode");
    string DarkModeBadgeCss => IsDarkMode ? "badge-secondary" : "badge-primary";

    protected override async Task OnParametersSetAsync()
    {
        CountArt = 0;

        try
        {
            var gallery = await Http.GetFromJsonAsync<GalleryTwoModel>(SiteHelper.JsonCDN($"gallery/{Name}"));
            PageDescription = gallery.Description.MarkdownToHtml();
            PageName = gallery.Title;

            art = gallery.Artwork;

            foreach (var art in art)
                CountArt++;

            IsReady = true;

        }
        catch (Exception err)
        {
            AlertMessage = err.Message;
            DisplayAlert = true;
        }
    } }
