@inject Blazored.LocalStorage.ISyncLocalStorageService localStorage
<div class="card flex-row flex-wrap @DarkModeCss">
    <div class="card-header">
        <h5>@Name</h5>
    </div>
    <div class="card-body">
        <div class="card-text">
            <div class="row">
                <p>@Description</p>
            </div>
            <div class="row">
                <p>Species: @Species</p>
            </div>
            <div class="row">
                <p>Species: @Species</p>
            </div>
        </div>
    </div>
</div>

@code { [Parameter] public string Name { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public string Gender { get; set; }
    [Parameter] public string Species { get; set; }
    [Parameter] public string Image { get; set; }
    [Parameter] public string Permalink { get; set; }

    bool IsDarkMode => localStorage.GetItem<bool>("darkmode");
    string DarkModeCss => IsDarkMode ? Themes.DarkCards : Themes.Light; }
