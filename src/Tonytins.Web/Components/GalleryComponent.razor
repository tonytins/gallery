<div class="card shadow-sm bg-light text-dark" style="margin-bottom: 10px;">
    <a href="/gallery/@Permalink"><img class="card-img-top" style="width: 100%;" src=@Image /></a>
    <div class="card-body">
        <h4 class="card-title">@Title</h4>
        <p class="card-text">
            Art by @Credits
            <br /><sup>@Copyrights</sup>
        </p>
    </div>
</div>

@code {
    [Parameter] public string Image { get; set; }

    [Parameter] public string Title { get; set; }

    [Parameter] public string Copyrights { get; set; }

    [Parameter] public string Credits { get; set; }

    [Parameter] public string Permalink { get; set; } }
