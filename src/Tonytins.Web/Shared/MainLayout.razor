@inherits LayoutComponentBase
@using Tonytins.Web.Components
<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row">
        <div class="col-sm"></div>
        <div class="col-sm">
            <AdexComponent />
        </div>
        <div class="col-sm"></div>

    </div>

    <div class="content px-4">
        @Body
    </div>

    <footer>
        <div class="row">
            <div class="col-sm"></div>
            <div class="col-sm"><div class="text-center">@Slogans</div></div>
            <div class="col-sm"></div>
        </div>
    </footer>

</div>

@code { string Slogans
    {
        get
        {
            var rng = new Random();
            var phrases = new[] { "📡 Internet of Tins", "🍣 The Full Snack Developer" };
            return phrases[rng.Next(phrases.Length)];
        }
    } }
