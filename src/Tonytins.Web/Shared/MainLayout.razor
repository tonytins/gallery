@inherits LayoutComponentBase
@inject Blazored.LocalStorage.ISyncLocalStorageService localStorage
<div class="main @MainDarkModeCssClass">
    <NavMenu />
    <div class="content night-light px-4">
        <div class="row justify-content-center">
            <div class="col-sm"></div>
            <div class="col" id="adex"><AdexComponent /></div>
            <div class="col-sm"></div>
        </div>
        @Body
    </div>
    <SiteFooter />
</div>

@code { bool IsDarkMode
            {
                get
                {
                    return localStorage.GetItem<bool>("darkmode");
                }
                set
                {
                    localStorage.SetItem("darkmode", value);
                }
            }

            string MainDarkModeCssClass => IsDarkMode ? "bg-dark text-light" : "bg-light text-dark";
            string DarkTopRow => IsDarkMode ? "dark-top-row" : null;
            string BtnDarkMode => IsDarkMode ? "btn-light" : "btn-secondary";
            string FooterDarkMode => IsDarkMode ? "bg-dark text-light" : "bg-secondary text-light";
            string SocialDarkMode => IsDarkMode ? "text-light" : "text-dark";

            void ToggleDarkMode()
            {
                IsDarkMode = !IsDarkMode;
            } }
