@inherits LayoutComponentBase
@using Tonytins.Web.Components

<div class="container-fluid shadow">
    <div class="row">
        <div class="sidebar">
            <NavMenu />
        </div>
        <div class="main @DarkModeCssClass">
            <div class="top-row">
                <div class="col-sm"></div>
                <div class="col-sm">
                    <AdexComponent />
                </div>
                <div class="col-sm"></div>
            </div>
            <div class="content px-4">
                @Body
            </div>
        </div>
    </div>
    <div class="row bottom-row">
        <div class="col-sm"></div>
        <div class="col-sm-auto">
            <div class="text-center align-self-center">
                <TaglineComponent />
            </div>
        </div>
        <div class="col-sm"></div>
        <div class="col-sm">
            <SocialListComponent />
        </div>
        <div class="col-sm">
            <LegalNoticesListComponent />
        </div>
        <div class="col-sm-auto">
            <button class="btn btn-secondary" @onclick="ToggleDarkMode">Dark Mode</button>
        </div>
        <div class="col-sm"></div>
    </div>
</div>

@code { bool _isDarkMode = false;

    string DarkModeCssClass => _isDarkMode ? "bg-dark btn-dark" : null;

    void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    } }
