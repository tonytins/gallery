<div class="top-row pl-4">
    <p class="navbar-brand text-light" style="margin:5px;">@SiteConsts.SiteName ✊🏿✊🏽✊🏾</p>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="fa fa-home tins-fa-padding" aria-hidden="true"></span>
                Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="coh">
                <span class="fa fa-city tins-fa-padding" aria-hidden="true"></span>
                City of Heroes
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="giftart">
                <span class="fa fa-heart tins-fa-padding" aria-hidden="true"></span>
                Gift Art
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="games/dressup">
                <span class="fa fa-gamepad tins-fa-padding" aria-hidden="true"></span>
                Video Games
            </NavLink>
        </li>
    </ul>
</div>

@code { bool _collapseNavMenu = true;

    string NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    } }
